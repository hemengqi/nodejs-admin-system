extend layout_angular
block append script
	script(src="/javascripts/angular_demo1.js")
block content
	h4 数据双向绑定
	input(type="text",ng-model="yourName",placeholder="name")
	p Hello,{{yourName}}!
	h4 进度条
	progress-bar
	div(ng-controller="progress")
		div.progress(ng-class="{'':true,'progress-bar-striped':vm.striped}")
			div(ng-class="['progress-bar', vm.style]",ng-style="{width:vm.width+'%'}")
				div(ng-if = "vm.label") {{vm.width}}%
			